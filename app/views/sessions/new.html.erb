<div class="loginpage">



<h1>Login</h1>

<h2><%= flash[:notice] %></h2>

<%= form_tag login_path do %>
  <%= label_tag :username %>
  <%= text_field_tag :username %>
  <br>
  <%= label_tag :password %>
  <%= password_field_tag :password %>
  <br>
  <%= submit_tag 'Login', class:"loginbutton" %>
<% end %>

    <p>New user? <%= link_to "Sign up now!", new_user_path %></p>
  </div>
</div>

</div>
